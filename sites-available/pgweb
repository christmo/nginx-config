server {
    server_name pgweb.dbogatov.org;

    include /etc/nginx/snippets/http_redirect.conf;
}

server {
    server_name pgweb.dbogatov.org;

    ssl_certificate /etc/letsencrypt/live/pgweb.dbogatov.org/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/pgweb.dbogatov.org/privkey.pem;

    include /etc/nginx/snippets/ssl_config.conf;

    location / {
        proxy_pass http://localhost:8081;

        include /etc/nginx/snippets/proxy_pass.conf;
    }

    include /etc/nginx/snippets/letsencrypt.conf;
}
