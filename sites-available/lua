server {
    listen 80;

    server_name lua.dbogatov.org;

    root /var/static/Visa-Support;

    location = / {
        index index.html;
    }

    location / {
        try_files $uri.html $uri =404;
    }
    
    location /hello {
        set_unescape_uri $name $arg_name;
        set_if_empty $name "Anonymous";
        echo "Hello, $name!";
    }
}
