server {
    server_name matters.dbogatov.org;

    include /etc/nginx/snippets/http_redirect.conf;
}

server {
    ssl_certificate /etc/letsencrypt/live/matters.dbogatov.org/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/matters.dbogatov.org/privkey.pem;

    server_name matters.dbogatov.org;

    include /etc/nginx/snippets/ssl_config.conf;

    location / {
        proxy_pass http://localhost:8080/matters/;

        include /etc/nginx/snippets/proxy_pass.conf;
    }

    location /matters {
        proxy_pass http://localhost:8080/matters/;

        include /etc/nginx/snippets/proxy_pass.conf;
    }

    include /etc/nginx/snippets/letsencrypt.conf;
}
