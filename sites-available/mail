server {
    server_name mail.dbogatov.org;

    include /etc/nginx/snippets/http_redirect.conf;
}

server {
    ssl_certificate /etc/letsencrypt/live/mail.dbogatov.org/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/mail.dbogatov.org/privkey.pem;

    server_name mail.dbogatov.org;

    include /etc/nginx/snippets/ssl_config.conf;

    location / {
        proxy_pass https://box.dbogatov.org/mail/;

        include /etc/nginx/snippets/proxy_pass.conf;
    }

    location /mail {
        proxy_pass http://box.dbogatov.org/mail/;

        include /etc/nginx/snippets/proxy_pass.conf;
    }

    include /etc/nginx/snippets/letsencrypt.conf;
}
